<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="NBC Automation Test" parallel="false">

    <parameter name="useCloudEnv" value="true"/>
    <parameter name="cloudEnvName" value="saucelabs"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="60.0"/>
    <parameter name="url" value="https://www.nbc.com/"/>

    <test name = "NBC Test Suits (Mac/Chrome)">
        <classes>
            <class name="test.page.objects.HomePageTest"/>
            <class name="test.page.objects.HomePageTabFunctionTest"/>
            <class name="test.page.objects.FooterSocialMediaTest"/>
            <class name="test.page.objects.FooterExtLinkTest"/>
            <class name="test.page.objects.TestAllShows"/>
            <class name="test.page.objects.TestCurrentShows"/>
            <class name="test.page.objects.TestUpComingShows"/>
            <class name="test.page.objects.TestThrowBack"/>
            <class name="test.page.objects.TestSearchPage"/>
            <class name="test.page.objects.TestSignUpPage"/>
        </classes>
    </test>
</suite>